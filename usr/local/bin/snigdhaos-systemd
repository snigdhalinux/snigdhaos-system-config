#!/bin/bash

# Author 	: Erik Dubois
# Website   : https://www.erikdubois.be

# Modified By   : Eshan Roy
# Website       : https://eshanized.github.io

boot=$(bootctl status | grep Product | awk '{printf($2)}')
echo "The system is using $boot to boot."

# Only install grub when on grub
if [ $boot = "GRUB" ]; then
	/usr/bin/grub-install --target=x86_64-efi --efi-directory=/boot/efi --bootloader-id=snigdhaos
fi