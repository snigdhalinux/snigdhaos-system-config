#!/bin/bash

# Author	:	Erik Dubois
# Website	:	https://www.erikdubois.be

# Modified By 	: Eshan Roy
# Website		: https://eshanized.github.io

echo ""
echo "Copying gpg.conf..."
echo ""

file_boolean=0

function check_file() {

	file="/usr/local/share/snigdhaos/gpg.conf"
	if [[ -f $file ]];then
    	echo $file " exists"
    	file_boolean=1
	else
    	echo $file " doesn't exist"
    	file_boolean=0
	fi
}

check_file

# pacman gpg config + not online
if [ $file_boolean -eq 1 ] ; then
	echo "Copying Locally.."
	sudo cp /usr/local/share/snigdhaos/gpg.conf /etc/pacman.d/gnupg/gpg.conf
	echo "/etc/pacman.d/gnupg/gpg.conf copied from local system"
fi

echo ""
echo "Done..."
echo ""